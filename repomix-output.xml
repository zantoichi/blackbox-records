body {
margin: 0;
min-height: 100vh;
font-family: var(--font-sans);
background: var(--color-bg);
color: var(--color-foreground);
height: 100%;
}

body.home-snap {
scroll-snap-type: y mandatory;
scroll-padding-top: var(--header-height);
overflow-y: auto;
}

a {
color: inherit;
text-decoration: none;
}

a:hover {
color: var(--color-foreground);
}

img {
display: block;
max-width: 100%;
}

.visually-hidden {
position: absolute;
width: 1px;
height: 1px;
padding: 0;
margin: -1px;
overflow: hidden;
clip: rect(0, 0, 0, 0);
white-space: nowrap;
border: 0;
}

.skip-link {
position: absolute;
top: 1rem;
left: 1rem;
padding: 0.5rem 1rem;
background: var(--color-foreground);
color: var(--color-bg);
border-radius: 999px;
font-size: 0.85rem;
transform: translateY(-200%);
transition: transform 0.2s ease;
z-index: 1100;
}

.skip-link:focus {
transform: translateY(0);
}

.site-container {
max-width: var(--container-width);
margin: 0 auto;
padding: 0 var(--gutter);
}

.site-main {
padding-top: var(--header-height);
}

.site-main--home {
padding-top: 0;
}

.site-header {
position: fixed;
inset: 0 0 auto 0;
height: var(--header-height);
background: rgba(13, 13, 13, 0.9);
border-bottom: 1px solid var(--color-border);
backdrop-filter: blur(12px);
z-index: 1000;
}

.site-header__inner {
display: flex;
align-items: center;
justify-content: space-between;
gap: 1.5rem;
height: 100%;
}

.site-header__logo img {
width: 3.5rem;
height: 3.5rem;
object-fit: contain;
}

.site-nav {
display: none;
}

.site-nav__list {
list-style: none;
display: flex;
gap: 2.5rem;
padding: 0;
margin: 0;
}

.site-nav__link {
font-size: 0.75rem;
text-transform: uppercase;
letter-spacing: 0.2em;
color: var(--color-muted);
transition: color 0.2s ease;
}

.site-nav__link:hover {
color: var(--color-foreground);
}

.site-header__toggle {
border: none;
background: transparent;
color: var(--color-foreground);
padding: 0.5rem;
cursor: pointer;
}

.site-header__toggle .icon {
width: 1.5rem;
height: 1.5rem;
}

.site-header__toggle .icon--close {
display: none;
}

.site-header__mobile {
display: none;
border-top: 1px solid var(--color-border);
background: rgba(13, 13, 13, 0.95);
}

.site-header__mobile .site-nav__list {
flex-direction: column;
gap: 1rem;
padding: 1.5rem var(--gutter);
}

.site-header.is-open .site-header__mobile {
display: block;
}

.site-header.is-open .icon--menu {
display: none;
}

.site-header.is-open .icon--close {
display: block;
}

.hero {
position: relative;
min-height: 100vh;
display: flex;
align-items: center;
justify-content: center;
text-align: center;
padding: calc(var(--header-height) + 2rem) 0 4rem;
overflow: hidden;
}

.snap-section {
scroll-snap-align: start;
scroll-snap-stop: always;
scroll-margin-top: var(--header-height);
}

.site-main--home .release-card {
transition: transform 0.3s ease;
}

.site-main--home .release-card:hover {
transform: translateY(-0.35rem);
}

.site-main--home .release-card__media {
transition: border-color 0.3s ease;
}

.site-main--home .release-card:hover .release-card__media {
border-color: rgba(245, 245, 245, 0.5);
}

.site-main--home .artist-card__content {
transition: transform 0.4s ease;
}

.site-main--home .artist-card:hover .artist-card__content {
transform: translateY(-0.4rem);
}

.site-main--home .news-card__media img {
transition: transform 0.5s ease, filter 0.5s ease;
}

.site-main--home .news-card:hover .news-card__media img {
filter: grayscale(0.2);
transform: scale(1.06);
}

.site-main--home .news-card h2,
.site-main--home .news-card h3 {
transition: color 0.3s ease, letter-spacing 0.3s ease;
}

.site-main--home .news-card:hover h2,
.site-main--home .news-card:hover h3 {
color: var(--color-foreground);
letter-spacing: 0.02em;
}

.hero__pattern {
position: absolute;
inset: 0;
opacity: 0.03;
color: var(--color-foreground);
}

.hero__pattern svg {
width: 100%;
height: 100%;
}

.hero__ring {
position: absolute;
border-radius: 999px;
border: 1px solid rgba(245, 245, 245, 0.15);
inset: 50%;
transform: translate(-50%, -50%);
}

.hero__ring--lg {
width: 44rem;
height: 44rem;
}

.hero__ring--md {
width: 32rem;
height: 32rem;
border-color: rgba(245, 245, 245, 0.1);
}

.hero__ring--sm {
width: 20rem;
height: 20rem;
border-color: rgba(245, 245, 245, 0.07);
}

.hero__content {
position: relative;
z-index: 1;
}

.hero__logo {
width: clamp(8rem, 16vw, 14rem);
height: clamp(8rem, 16vw, 14rem);
margin: 0 auto 2rem;
}

.hero__logo img {
width: 100%;
height: 100%;
object-fit: contain;
mix-blend-mode: screen;
}

.hero__tagline {
font-size: clamp(1rem, 2vw, 1.5rem);
color: var(--color-muted);
max-width: 36rem;
margin: 0 auto 3rem;
line-height: 1.7;
}

.hero__actions {
display: flex;
flex-wrap: wrap;
justify-content: center;
gap: 1rem;
}

.hero__scroll {
position: absolute;
bottom: 2rem;
left: 50%;
transform: translateX(-50%);
display: flex;
flex-direction: column;
align-items: center;
gap: 0.5rem;
text-transform: uppercase;
letter-spacing: 0.3em;
font-size: 0.7rem;
color: var(--color-muted);
}

.hero__scroll-line {
width: 1px;
height: 3rem;
background: var(--color-border);
position: relative;
overflow: hidden;
}

.hero__scroll-line span {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 0.85rem;
background: var(--color-foreground);
animation: scrollPulse 1.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

@keyframes scrollPulse {
0% {
transform: translateY(-100%);
opacity: 0;
}
20% {
opacity: 1;
}
60% {
opacity: 1;
}
100% {
transform: translateY(220%);
opacity: 0;
}
}

.button {
display: inline-flex;
align-items: center;
justify-content: center;
padding: 1rem 2.5rem;
text-transform: uppercase;
letter-spacing: 0.2em;
font-size: 0.75rem;
border: 1px solid transparent;
transition: background 0.2s ease, color 0.2s ease, border-color 0.2s ease;
}

.button--primary {
background: var(--color-foreground);
color: var(--color-bg);
}

.button--primary:hover {
background: rgba(245, 245, 245, 0.9);
}

.button--outline {
border-color: var(--color-foreground);
color: var(--color-foreground);
background: transparent;
}

.button--outline:hover {
background: var(--color-foreground);
color: var(--color-bg);
}

.section {
padding: 6rem 0;
}

.section--compact {
padding: 4rem 0;
}

.section--tight {
padding: 1.5rem 0;
}

.section--border {
border-top: 1px solid var(--color-border);
}

.section--card {
background: var(--color-card);
}

.section-header {
display: flex;
flex-wrap: wrap;
justify-content: space-between;
align-items: flex-end;
gap: 1rem;
margin-bottom: 3rem;
}

.section-header--center {
text-align: center;
flex-direction: column;
align-items: center;
}

.section-kicker {
font-family: var(--font-mono);
font-size: 0.7rem;
letter-spacing: 0.3em;
text-transform: uppercase;
color: var(--color-muted);
margin: 0 0 0.5rem;
}

.section-title {
font-family: var(--font-display);
font-size: clamp(2.5rem, 5vw, 4rem);
letter-spacing: 0.08em;
margin: 0;
}

.section-link {
font-size: 0.75rem;
text-transform: uppercase;
letter-spacing: 0.15em;
color: var(--color-muted);
transition: color 0.2s ease;
}

.section-link:hover {
color: var(--color-foreground);
}

.section-cta {
text-align: center;
margin-top: 3rem;
}

.release-grid,
.news-grid,
.artist-grid,
.product-grid {
display: grid;
gap: 2rem;
}

.release-grid {
grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.release-grid--home {
grid-template-columns: repeat(auto-fit, minmax(220px, 260px));
justify-content: center;
}

.release-card {
display: block;
color: inherit;
}

.release-card__media {
position: relative;
border: 1px solid var(--color-border);
background: var(--color-card);
overflow: hidden;
aspect-ratio: 1 / 1;
margin-bottom: 1rem;
}

.release-card__media img {
width: 100%;
height: 100%;
object-fit: cover;
filter: grayscale(1);
transition: transform 0.5s ease;
}

.release-card__overlay {
position: absolute;
inset: 0;
background: rgba(13, 13, 13, 0.6);
display: flex;
align-items: center;
justify-content: center;
opacity: 0;
transition: opacity 0.3s ease;
}

.release-card__overlay span {
border: 1px solid var(--color-foreground);
padding: 0.5rem 1.25rem;
font-size: 0.7rem;
letter-spacing: 0.3em;
text-transform: uppercase;
}

.release-card:hover img {
transform: scale(1.05);
}

.release-card:hover .release-card__overlay {
opacity: 1;
}

.release-card__year {
font-family: var(--font-mono);
font-size: 0.7rem;
color: var(--color-muted);
margin: 0 0 0.25rem;
}

.release-card__title {
font-family: var(--font-display);
font-size: 1.6rem;
letter-spacing: 0.08em;
margin: 0 0 0.25rem;
}

.release-card__artist {
font-size: 0.85rem;
color: var(--color-muted);
margin: 0;
}

.artist-grid {
grid-template-columns: repeat(2, minmax(0, 1fr));
gap: 1.25rem;
}

.artist-grid--home {
grid-template-columns: repeat(auto-fit, minmax(12rem, 15rem));
justify-content: center;
}

.artist-card {
position: relative;
aspect-ratio: 3 / 4;
overflow: hidden;
border: 1px solid var(--color-border);
background: var(--color-card);
color: inherit;
display: block;
}

.artist-card img {
width: 100%;
height: 100%;
object-fit: cover;
filter: grayscale(1);
transition: transform 0.7s ease;
}

.artist-card__overlay {
position: absolute;
inset: 0;
background: linear-gradient(to top, rgba(13, 13, 13, 0.9), rgba(13, 13, 13, 0.4), transparent);
opacity: 0.7;
transition: opacity 0.3s ease;
}

.artist-card__content {
position: absolute;
inset: auto 0 0 0;
padding: 1rem;
}

.artist-card__content p {
font-family: var(--font-mono);
font-size: 0.7rem;
letter-spacing: 0.3em;
text-transform: uppercase;
color: var(--color-muted);
margin: 0 0 0.4rem;
}

.artist-card__content h3 {
font-family: var(--font-display);
font-size: 1.4rem;
letter-spacing: 0.08em;
margin: 0;
display: flex;
align-items: center;
gap: 0.5rem;
}

.artist-card__content span {
font-size: 0.9rem;
opacity: 0;
transform: translateX(-0.5rem);
transition: opacity 0.3s ease, transform 0.3s ease;
}

.artist-card:hover img {
transform: scale(1.1);
}

.artist-card:hover .artist-card__overlay {
opacity: 0.9;
}

.artist-card:hover .artist-card__content span {
opacity: 1;
transform: translateX(0);
}

.artist-card__bio {
margin: 1rem 0 0;
font-size: 0.85rem;
color: var(--color-muted);
}

.news-grid {
grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
}

.news-grid--full {
grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

.news-card {
display: block;
color: inherit;
}

.news-card__media {
aspect-ratio: 5 / 3;
border: 1px solid var(--color-border);
background: var(--color-card);
overflow: hidden;
margin-bottom: 1rem;
}

.news-grid--full .news-card__media {
aspect-ratio: 3 / 2;
}

.news-card__media img {
width: 100%;
height: 100%;
object-fit: cover;
filter: grayscale(1);
transition: transform 0.5s ease;
}

.news-card:hover img {
transform: scale(1.05);
}

.news-card__date {
font-family: var(--font-mono);
font-size: 0.7rem;
letter-spacing: 0.2em;
text-transform: uppercase;
color: var(--color-muted);
margin: 0 0 0.5rem;
}

.news-card h2,
.news-card h3 {
margin: 0 0 0.5rem;
font-size: 1.1rem;
line-height: 1.4;
}

.news-card__excerpt {
color: var(--color-muted);
font-size: 0.9rem;
line-height: 1.6;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
overflow: hidden;
}

.about-grid {
display: grid;
gap: 4rem;
align-items: center;
}

.about-image {
position: relative;
aspect-ratio: 4 / 5;
}

.about-image__frame {
position: absolute;
inset: 0;
border: 1px solid rgba(245, 245, 245, 0.2);
transform: translate(0.75rem, 0.75rem);
}

.about-image img {
position: relative;
z-index: 1;
width: 100%;
height: 100%;
object-fit: cover;
filter: grayscale(1);
}

.about-content .section-title {
margin-bottom: 2rem;
}

.about-content__body {
color: var(--color-muted);
line-height: 1.8;
}

.about-content__body p {
margin: 0 0 1.5rem;
}

.about-stats {
display: grid;
grid-template-columns: repeat(3, minmax(0, 1fr));
gap: 2rem;
border-top: 1px solid var(--color-border);
border-bottom: 1px solid var(--color-border);
padding: 2rem 0;
margin-top: 2.5rem;
}

.about-stats p {
font-family: var(--font-display);
font-size: 2.5rem;
letter-spacing: 0.08em;
margin: 0 0 0.25rem;
}

.about-stats span {
font-size: 0.7rem;
letter-spacing: 0.2em;
text-transform: uppercase;
color: var(--color-muted);
}

.newsletter {
position: relative;
overflow: hidden;
}

.newsletter__rings {
position: absolute;
inset: 0;
display: grid;
place-items: center;
pointer-events: none;
}

.newsletter__rings span {
position: absolute;
border-radius: 999px;
border: 1px solid rgba(245, 245, 245, 0.08);
}

.newsletter__rings span:first-child {
width: 38rem;
height: 38rem;
}

.newsletter__rings span:last-child {
width: 26rem;
height: 26rem;
}

.newsletter__inner {
position: relative;
z-index: 1;
text-align: center;
max-width: 42rem;
}

.newsletter__inner p {
color: var(--color-muted);
}

.newsletter__form {
display: flex;
flex-wrap: wrap;
gap: 1rem;
justify-content: center;
margin: 2rem auto 1rem;
}

.newsletter__form input {
flex: 1 1 15rem;
padding: 0.75rem 1rem;
background: transparent;
border: 1px solid var(--color-border);
color: var(--color-foreground);
font-size: 0.9rem;
}

.newsletter__form button {
padding: 0.75rem 1.5rem;
border: none;
background: var(--color-foreground);
color: var(--color-bg);
text-transform: uppercase;
letter-spacing: 0.2em;
font-size: 0.75rem;
cursor: pointer;
}

.newsletter__note {
font-size: 0.75rem;
letter-spacing: 0.1em;
text-transform: uppercase;
color: var(--color-muted-strong);
}

.page-hero {
padding: 4rem 0;
border-bottom: 1px solid var(--color-border);
}

.page-hero__kicker {
font-family: var(--font-mono);
font-size: 0.7rem;
letter-spacing: 0.3em;
text-transform: uppercase;
color: var(--color-muted);
margin: 0 0 0.75rem;
}

.page-hero__title {
font-family: var(--font-display);
font-size: clamp(2.5rem, 5vw, 4rem);
letter-spacing: 0.1em;
margin: 0;
}

.page-hero-image {
position: relative;
height: 50vh;
overflow: hidden;
}

.page-hero-image img {
width: 100%;
height: 100%;
object-fit: cover;
filter: grayscale(1);
}

.page-hero-image__overlay {
position: absolute;
inset: 0;
background: linear-gradient(to top, rgba(13, 13, 13, 1), rgba(13, 13, 13, 0.5), transparent);
}

.rich-text {
max-width: 64rem;
}

.rich-text .lead {
font-size: 1.2rem;
color: var(--color-muted);
line-height: 1.8;
margin-bottom: 2rem;
}

.rich-text h2 {
font-family: var(--font-display);
font-size: 2.4rem;
letter-spacing: 0.08em;
margin: 3rem 0 1rem;
}

.rich-text p {
color: var(--color-muted);
line-height: 1.8;
margin: 0 0 1.5rem;
}

.rich-text blockquote {
border-left: 2px solid var(--color-foreground);
padding-left: 1.5rem;
margin: 2.5rem 0;
}

.rich-text blockquote p {
font-family: var(--font-display);
font-size: 1.6rem;
letter-spacing: 0.08em;
color: var(--color-foreground);
margin: 0 0 1rem;
}

.rich-text cite {
font-size: 0.7rem;
text-transform: uppercase;
letter-spacing: 0.2em;
color: var(--color-muted);
font-style: normal;
}

.rich-text ul {
list-style: none;
padding: 0;
margin: 0;
color: var(--color-muted);
}

.rich-text li {
margin-bottom: 0.5rem;
}

.rich-text li span {
color: var(--color-foreground);
}

.stats-grid {
display: grid;
grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
gap: 2rem;
text-align: center;
}

.stats-grid p {
font-family: var(--font-display);
font-size: 3rem;
letter-spacing: 0.08em;
margin: 0 0 0.5rem;
}

.stats-grid span {
font-size: 0.75rem;
letter-spacing: 0.2em;
text-transform: uppercase;
color: var(--color-muted);
}

.shop-filters {
display: flex;
flex-wrap: wrap;
gap: 1rem;
}

.filter-button {
padding: 0.5rem 1rem;
border: 1px solid var(--color-border);
background: transparent;
color: var(--color-muted);
text-transform: uppercase;
letter-spacing: 0.15em;
font-size: 0.7rem;
cursor: pointer;
transition: border-color 0.2s ease, color 0.2s ease;
}

.filter-button--active {
background: var(--color-foreground);
color: var(--color-bg);
border-color: var(--color-foreground);
}

.filter-button:hover {
border-color: var(--color-foreground);
color: var(--color-foreground);
}

.shop-placeholder {
background: var(--color-card);
border: 1px solid var(--color-border);
padding: 3rem;
text-align: center;
}

.shop-placeholder__note {
font-family: var(--font-mono);
font-size: 0.75rem;
letter-spacing: 0.2em;
text-transform: uppercase;
color: var(--color-muted);
}

.shop-placeholder__frame {
margin-top: 2rem;
aspect-ratio: 16 / 9;
border: 1px solid var(--color-border);
display: grid;
place-items: center;
color: var(--color-muted);
}

.product-grid {
grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
}

.product-card {
display: block;
color: inherit;
}

.product-card__media {
position: relative;
aspect-ratio: 1 / 1;
border: 1px solid var(--color-border);
background: var(--color-card);
overflow: hidden;
margin-bottom: 1rem;
}

.product-card__media img {
width: 100%;
height: 100%;
object-fit: cover;
transition: transform 0.5s ease;
}

.product-card:hover img {
transform: scale(1.05);
}

.product-card__badge {
position: absolute;
top: 0.75rem;
left: 0.75rem;
background: rgba(13, 13, 13, 0.8);
color: var(--color-muted);
font-family: var(--font-mono);
font-size: 0.7rem;
padding: 0.25rem 0.5rem;
}

.product-card h3 {
font-size: 0.95rem;
margin: 0 0 0.25rem;
}

.product-card__artist {
font-size: 0.75rem;
color: var(--color-muted);
margin: 0 0 0.5rem;
}

.product-card__price {
font-family: var(--font-mono);
font-size: 0.85rem;
color: var(--color-foreground);
margin: 0;
}

.site-footer {
border-top: 1px solid var(--color-border);
background: var(--color-card);
}

.site-footer__inner {
display: grid;
grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
gap: 3rem;
padding: 4rem 0 2rem;
}

.site-footer__brand {
max-width: 28rem;
}

.site-footer__brand img {
width: 6rem;
height: 6rem;
object-fit: contain;
margin-bottom: 1.5rem;
}

.site-footer__brand p {
color: var(--color-muted);
font-size: 0.9rem;
line-height: 1.7;
}

.site-footer__column h3 {
font-size: 0.75rem;
letter-spacing: 0.3em;
text-transform: uppercase;
margin: 0 0 1.5rem;
}

.site-footer__column ul {
list-style: none;
padding: 0;
margin: 0;
display: grid;
gap: 0.75rem;
}

.site-footer__column a {
color: var(--color-muted);
font-size: 0.85rem;
}

.site-footer__column a:hover {
color: var(--color-foreground);
}

.site-footer__bottom {
display: flex;
flex-wrap: wrap;
justify-content: space-between;
align-items: center;
gap: 1rem;
border-top: 1px solid var(--color-border);
padding: 1.5rem 0 3rem;
font-size: 0.7rem;
letter-spacing: 0.15em;
text-transform: uppercase;
color: var(--color-muted);
}

.site-footer__legal {
text-transform: none;
letter-spacing: 0.05em;
font-size: 0.65rem;
opacity: 0.7;
}

.redirect-page {
background: var(--color-bg);
color: var(--color-foreground);
min-height: 100vh;
display: flex;
align-items: center;
justify-content: center;
}

.redirect-page__content {
text-align: center;
font-family: var(--font-body);
letter-spacing: 0.08em;
text-transform: uppercase;
font-size: 0.75rem;
color: var(--color-muted);
}

.redirect-page__content a {
color: inherit;
text-decoration: underline;
}

@media (min-width: 48rem) {
.site-nav {
display: block;
}

.site-header__toggle {
display: none;
}

.artist-grid {
grid-template-columns: repeat(4, minmax(0, 1fr));
}

.artist-grid--home {
grid-template-columns: none;
grid-auto-flow: column;
grid-auto-columns: minmax(0, 1fr);
justify-content: center;
}

.about-grid {
grid-template-columns: repeat(2, minmax(0, 1fr));
}

.news-grid--full {
grid-template-columns: repeat(2, minmax(0, 1fr));
}

.site-footer__brand {
grid-column: span 2;
}
}

@media (min-width: 64rem) {
.news-grid {
grid-template-columns: repeat(3, minmax(0, 1fr));
}

.product-grid {
grid-template-columns: repeat(4, minmax(0, 1fr));
}
}

@media (max-width: 40rem) {
.section-header {
align-items: flex-start;
}

.hero__actions {
flex-direction: column;
}

.shop-placeholder {
padding: 2rem;
}
}
